<div class="jumbotron text-center">
    <h1>Create or update a receipe</h1>

    <p>{{ message }}</p>

    <div ng-controller="donateController">
        <div ng-if="!donations._id">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <!--<pre>{{formData | json}}</pre>-->
                    <form ng-submit="addDonation()"
                          style="margin-top:30px;">
                        <h3>Add a new Receipe</h3>

                        <div class="form-group" align="center">
                            </select>
                        </div>
                        <div class="form-group" align="center">
                            <input type="string"
                                   class="form-control"
                                   placeholder="Name"
                                   ng-model="formData.name"
                                   ng-style="{'width': 400 + 'px'}"></input>
                        </div>
                        <div class="form-group" align="center">
                            <input type="string"
                                   class="form-control"
                                   placeholder="Ingredients"
                                   ng-model="formData.ingredients"
                                   ng-style="{'width': 400 + 'px'}"></input>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Receipe</button>
                    </form>
                </div>
            </div>
        </div>

        <div ng-if="donations._id">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <!--<pre>{{formData | json}}</pre>-->

                    <form ng-submit="updateReceipe(donations._id)"
                          style="margin-top:30px;">
                        <h3>Update a Receipe</h3>

                        <div class="form-group" align="center">
                            </select>
                        </div>
                        <div class="form-group" align="center">
                            <input type="string"
                                   class="form-control"
                                   placeholder={{donations.name}}
                                   ng-model="formData.name"
                                   ng-style="{'width': 400 + 'px'}"></input>
                        </div>
                        <div class="form-group" align="center">
                            <input type="string"
                                   class="form-control"
                                   placeholder={{donations.ingredients}}
                                   ng-model="formData.ingredients"
                                   ng-style="{'width': 400 + 'px'}"></input>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Receipe</button>
                        <!--<button type="button" class="btn btn-info" ng-click="updateReceipe(donations._id)">Update Receipe</button>-->

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>