<div class="jumbotron text-center">
    {{ message }}
    {{donations | json}}

    <pre> {{donations | json}}</pre>
    <h1>Search for Receipes</h1>

    <div class="two" ng-controller="searchController">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form ng-submit="search()"
                      style="margin-top:30px;">
                    <h3>Search for receipes</h3>
                    <div class="form-group" align="center">
                        <input type="string"
                               class="form-control"
                               placeholder="Search"
                               ng-model="formData.searchParam"
                               ng-style="{'width': 400 + 'px'}"></input>
                    </div>
                    <button type="submit" class="btn btn-primary" ng-click="toggle = true">Search</button>
                    <!--<button type="button" class="btn btn-info" ng-click="updateReceipe(donations._id)">Update Receipe</button>-->
                </form>
            </div>
        </div>
    </div>

    <div class="two" ng-controller="viewReceipeController">
        <table align="center" valign="middle">
            <tr>
                <td allign="center">
                    <font size="+2">Name:</font>
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
                <td allign="center">
                    <font size="+2">Created:</font>
                </td>
            </tr>
            <tbody ng-repeat="donation in donations">
            <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign=" middle
            "; >
            <td>
                <span class="glyphicon glyphicon-eye-open" ng-click="viewReceipe(donation._id)"></span>
                {{donation.name}}
            </td>
            <td>
                &nbsp;
            </td>
            <td>
                &nbsp;
            </td>
            <td>
                &nbsp;
            </td>

            <td>
                {{donation.Created_date}}
            </td>
            <td>

            </td>
            </tr>
            </tbody>
        </table>
</div>
</div>
